doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title DAL inspector
    link(rel='stylesheet' href='css/styles.css')
    script(src='js/jquery-3.6.0.min.js')
    script(defer src='js/alpine-3.10.3.js')
    script(src='js/main.js')
  body.text-color.background-color.font-normal(x-data='appData' )
    .flex.space-between.align-bottom
      div
        h1.text-deep DAL inspector
        p.font-large inspect / debug DAL expression
      .flex.align-center.gap-20.controls.text-dark
        .flex.align-center.gap-10
          span Remote:
          .instance-monitors
            template(x-for="[name, active] in instances" :key='name')
              label.switch
                input(type="checkbox" hidden=true x-model="active")
                span.custom-checkbox
                span(x-text="name")

    .code-container
      button Try
      textarea.code-editor.code-editing(id='code' placeholder='DAL expression')

