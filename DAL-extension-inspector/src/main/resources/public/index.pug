doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title DAL inspector
    link(rel='stylesheet' href='css/styles.css')
    script(src='js/jquery-3.6.0.min.js')
    script(src='js/main.js')
  body
    .title-container
      .title
        h1 DAL inspector
        p inspect / debug DAL expression

    .code-container
      textarea(id='code' placeholder='DAL expression')
      div(id='status')

    .result-container
      .tabs
        .tab(data-tab='tab-result') Result
        .tab(data-tab='tab-inspect') Inspect
      .tab-content(id='tab-result')
        pre.result(id='result' placeholder='Result')
      .tab-content(id='tab-result')
        pre.inspect(id='inspect' placeholder='Inspect')
